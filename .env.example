# Environment
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=telegram_chatbot

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# LLM API Configuration (YesScale or any OpenAI-compatible API)
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://api.yesscale.io/v1
LLM_MODEL=gpt-4o-mini
# YesScale models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo, claude-3-5-sonnet-20241022
# OpenAI: https://api.openai.com/v1 với gpt-4, gpt-3.5-turbo
# DeepSeek: https://api.deepseek.com/v1 với deepseek-chat

# Context Management
MAX_CONTEXT_TOKENS=4000
MESSAGES_BEFORE_SUMMARY=20

# User Token Limits (để bảo vệ credit)
MAX_TOKENS_PER_USER_DAILY=50000
MAX_TOKENS_PER_USER_MONTHLY=500000
MAX_MESSAGES_PER_USER_DAILY=100

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000
